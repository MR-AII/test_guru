<h1>Passing the <%= @test_passsage.test.title %> Test</h1>

<b>
  <%= @test_passsage.current_question.body %>
</b>

<%= form_with url: test_passage_path(@test_passsage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answers_ids,
                                  @test_passsage.current_question.answers,
                                  :id,
                                  :title,
                                  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object_id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Next' %></p>
<% end %>

