<div class="row mt-4">
  <h1><%= t('tests.index.header') %></h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th class="sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('.level') %></th>
        <th><%= t('.question_count') %> </th>
        <th><%= t('.author') %>:</th>
      </tr>
    </thead>

    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
</div>

